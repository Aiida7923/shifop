<!DOCTYPE html>
<html>
  <head>
    <title>Shifop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= favicon_link_tag('favicon.ico') %>
  </head>

  <body>
    <header>
      <img src="assets/shifop.png" alt="" class="img">
      <ul class="header-menus">
        <% if @current_user %>
        <li>
          <%= link_to("申請","view/offer")%>
        </li>
        <li>
          <%= link_to("ログアウト", "/logout", {method: :post})%>
        </li>
        <% else %>
        <li>
          <%= link_to("ログイン", "/login") %>
        </li>
        <% end %>
      </ul>
    </header>
    <div class="main">
      <%= yield %>
    </div>
  </body>
</html>
